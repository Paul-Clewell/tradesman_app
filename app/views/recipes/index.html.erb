                    <dd><strong>Crafted Materials: </strong><%= recipe.crafted_materials %></dd>
                    <dd><strong>Components: </strong><%= recipe.components %></dd>
                    <dd><strong>Guilds: </strong><%= recipe.guilds %></dd>
                  </d1>
                </td>
            <% end %>
        <% end %>
      </tr>
    </table>
  </div>
  <h3>Level 3: Thracium Gloves and Materials</h3>
